                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:onClick="onMove"
                android:id="@+id/btn8">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:onClick="onMove"
                android:id="@+id/btn9">
            </Button>
